{
    "require": {
        "php": "^7.4",
        "react/mysql": "^0.5.4",
        "react/dns": "^1.2",
        "react/socket": "^1.4",
        "psr/log": "^1.1",
        "wyrihaximus/react-psr-3-stdio": "^2.1",
        "aura/sqlquery": "^2.7",
        "tonix-tuft/reactphp-mysql-decorator": "^1.2",
        "ext-json": "*",
        "clue/socks-react": "^1.0",
        "ext-pcntl": "*",
        "symfony/config": "^5.0",
        "symfony/yaml": "^5.0",
        "vlucas/phpdotenv": "^4.1"
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^7.2",
        "ergebnis/phpstan-rules": "^0.14",
        "phpstan/phpstan": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "scripts": {
        "app:run": "php src/run.php",
        "test:ecs": "vendor/bin/ecs check",
        "fix:ecs": "vendor/bin/ecs check --fix",
        "test:phpstan": "vendor/bin/phpstan analyse -l 6 src --memory-limit=256M",
        "test": [
            "@test:ecs",
            "@test:phpstan"
        ],
        "pre-update-cmd": "cp -n .env.example .env"
    }
}
