{
    "require": {
        "php": "^7.4",
        "react/mysql": "^0.5.4",
        "react/dns": "^1.2",
        "react/socket": "^1.4",
        "psr/log": "^1.1",
        "wyrihaximus/react-psr-3-stdio": "^2.1",
        "aura/sqlquery": "^2.7",
        "tonix-tuft/reactphp-mysql-decorator": "^1.2",
        "ext-json": "*",
        "clue/socks-react": "^1.0",
        "ext-pcntl": "*"
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "scripts": {
        "app:run": "php src/run.php",
        "test:ecs": "vendor/bin/ecs check",
        "fix:ecs": "vendor/bin/ecs check --fix"
    }
}
